{% extends 'base.html.twig' %}

{% block title %}Administration - Ajouter un créneau
{% endblock %}

{% block body %}
	<div class=" d-flex justify-content-evenly my-5">
		<a href="{{path('admin')}}" class="btn btn-primary">Tout les rappels</a>
		<a href="{{path('admin_last')}}" class="btn btn-primary">Les 5 dernier rappels</a>


		<a href="{{path('admin_today')}}" class="btn btn-primary">Rappel du jour</a>
	</div>
	{% for message in app.flashes('bravo') %}
		<div class="alert alert-success text-center col-6 mx-auto">{{ message }}</div>
	{% endfor %}
	<h1 class="text-center">Ajouter un créneau !</h1>


	<div class="row">
		<div class="col-8 mx-auto">

			{{form(form)}}
			</div>
		</div>
	{% endblock %}
